<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/item_background_dialog</item>
    </style>


    <style name="DialogStyle" parent="Theme.DaggerRoomExample">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowBackground">@color/darkened_black</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    </style>


<!---->
<!---->

    <style name="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_red</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Text.Header">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>

    <style name="Text.Header.DialogHeader">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Text.Header.Bold">
        <item name="fontFamily">@font/rubik_semibold</item>
        <item name="android:textColor">@color/text_color_red</item>
    </style>

    <style name="Text.HeaderRecyclerItem">
        <item name="android:textSize">20sp</item>

    </style>

    <style name="Text.RecyclerItem">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">15dp</item>
    </style>


    <style name="Button">
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>

    <style name="Button.BottomButton">
        <item name="android:layout_marginVertical">15dp</item>
    </style>


</resources>